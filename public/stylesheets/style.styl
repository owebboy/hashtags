body
  padding 50px
  font 14px monospace
a
  color #666

.button
  font-family monospace
  border 1px solid #333
  color #333
  background #fff
  padding 1em
  display inline-block
  transition .4s all
  text-decoration underline
  &:hover
    border-color #666
    color #666
  &:focus
    outline none

#input
  @extend .button
  width 300px

.id
  text-decoration none
  &:hover
    text-decoration underline

.button
  background #7FDBFF
  &:hover
    background #fff

.cool-button
  margin-top 1em
  padding .8em 1em

.cancel
  @extend .button
  @extend .cool-button
  background orange

.delete
  @extend .button
  @extend .cool-button
  background red

.creepy
  color #666

.hashtag
  font-weight bold
  font-size 18px

.hashtag, .creepy
  margin 0

.smile
  color #333
  
.frown
  @extend .smile

/*

  Simple Grid
  @owebboy

*/

full_width = 100
columns = 6
gutter = 0

.container
  width unit(full_width, '%')
  margin auto
  overflow hidden

.responsive
  max-width 100%

for col in 1..columns
  .col-{col}
    width unit((col / columns - gutter / 100 * 2) * 100, '%')
    display inline-block
    float left
    margin-left unit(gutter, '%')
    margin-right unit(gutter, '%')

@media screen and (max-width: 600px)
  for col in 1..columns
    .col-{col}
      float none
      display block
      width 100%
      margin 0
